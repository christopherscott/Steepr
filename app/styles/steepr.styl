#steepr
  header
    font-family "MuseoSlab500"
    font-weight normal


#tea-list 
  margin 0 0 0 0
  ul
    background url('../images/brown-paper.png') repeat-x
    background-position left bottom
    background-size 1103px 283px
    height 224px
    padding-top 15px
