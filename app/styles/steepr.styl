#steep
  .content
    padding 0
    overflow hidden

centered-bgimage(uri)
  background url(uri) no-repeat center center



#leaves
  height 380px
  margin 0 auto
  centered-bgimage('../images/leaves.png')

  #mug
    position relative
    margin 0 auto
    top 32px
    z-index 80
    height 315px
    width 245px
    centered-bgimage('../images/mug-trans.png')

  #tea
    top -337px
    left -1px
    z-index 90
    position relative
    margin 0 auto
    height 210px
    width 210px
    background rgba(255,255,255,.1)
    transition-property transform
    transition-timing-function linear
    border-radius 115px

  #time
    top -180px
    position relative
    display block
    text-align center
    margin 0 auto
    z-index 100
    text-shadow 0 -1px #270e0a
    width 200px
    color #e0e0e0
    font-size 88px
    font-family "FranchiseRegular"
    b
      color #8a470a

  /* brewing animations */
  &.brewing
    #tea
      animation-name(greentea)
      animation-timing-function(linear)
      /*transform scale(10.5)*/
      background rgba(106,65,36,.8)
    #mug
      transform rotate(360deg)
      transition-property transform
      transition-timing-function ease-out

#timer
  padding 70px 0
  background url("../images/tea-with-mug.png") no-repeat center center
  .inner
    position relative
    text-align center
    padding 40px
    border-radius 125px
    height 150px
    width 150px
    margin 0 auto
    box-shadow 0 0px 10px #000
    text-shadow 0 2px #fff
    border 1px solid #999

    p
      margin 0 0 90px
      font-size 32px
      font-family "WisdomScriptAIRegular"
      &.tea
        margin-top -10px
      .steeping
        margin-top 0

    time


