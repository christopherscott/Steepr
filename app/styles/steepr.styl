/* swipe default styles */
.swipe
  position relative
  b
    display block
    width 10px
    height: 300px
    position absolute
    top 0
    &.left
      left 0
      background url('../images/perforation-left.png') no-repeat
    &.right
      right 0
      background url('../images/perforation-right.png') no-repeat
      /* background url('../images/perforation-right.png') no-repeat*/
  ol, ul
    margin 0 0 0 0
    padding 0 0 0 0
  li
    position relative
  li div.tea-slide
    width 300px
    background url('../images/label-paper.png') no-repeat top center
    background-size 299px 190px
    padding 20px 0
    position relative
    font-weight bold
    color #333
    text-shadow 0 1px #fff
    font-size 24px
    text-align center
    margin 0 10px
    h2
      //color #005e20
      color #6b7823
      // color linear-gradient(top, #788437, #647119)
      font-size 48px
      font-family "ChunkFiveRegular"
      margin 0
      font-weight normal
    p
      font-family "MuseoSlab500"
      font-size 16px
      color #2e1300
      text-shadow 0 1px 0 #fff
      font-weight normal
    .count
      font-family "Helvetica Neue", "Helvetica", "Arial", sans
      font-weight bold
      color #fff
      text-shadow 0 1px #666
      display inline-block
      border-radius 12px
      background rgba(184,184,184,.8)
      box-shadow 0 1px 0 #999 inset, 0 1px 0 #fff
      padding 3px 10px 3px
