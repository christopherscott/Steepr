@import 'nib'

@-webkit-keyframes greentea {
  0%   { background: white }
  25%  { background: yellow }
  50%  { background: #acd373 }
  75%  { background: #005e20 }
  100% { background: #736357 }
}
@-moz-keyframes greentea {
  0%   { background: white }
  25%  { background: yellow }
  50%  { background: #acd373 }
  75%  { background: #005e20 }
  100% { background: #736357 }
}
@-ms-keyframes greentea {
  0%   { background: white }
  25%  { background: yellow }
  50%  { background: #acd373 }
  75%  { background: #005e20 }
  100% { background: #736357 }
}

animation-name()
  -webkit-animation-name arguments
  -moz-animation-name arguments
  -ms-animation-name arguments
  animation-name arguments

animation-timing-function()
  -webkit-animation-timing-function arguments
  -moz-animation-timing-function arguments
  -ms-animation-timing-function arguments
  animation-timing-function arguments

.brewing
  animation-name(greentea)
  animation-timing-function(linear)

/* swipe default styles */
.swipe
  ol, ul
    margin 0
    padding 0

  li div,
  div div div
    margin 0 10px
    padding 20px 10px
    font-weight bold
    color #333
    text-shadow 0 1px #fff
    font-size 20px
    text-align center
    border-radius 5px
    background white

inset-background(color)
  background color url("../images/bgnoise_lg.png") repeat

#home
  .content
    padding 0
  #steep-button
    inset-background(white) 
    box-shadow 0 1px 5px #999 inset
    padding 20px

#steep
