#home
  .ui-title
    background url('../images/steepr-logo.png') no-repeat center center
    background-size 77px 44px
    height 44px
    margin 0
    ir()
  .content
    padding 0
  #steep-button
    background url('../images/clove-texture-footer.png') center top no-repeat
    background-size 320px 129px
    padding 15px 0 9px 0
    #steepit
      ir()
      margin 0 auto
      background url('../images/brushed-metal-steep.png')
      background-size 104px 210px
      &:hover
        background-position 0 -105px
    .ui-btn-corner-all
      border none
      box-shadow none
      width 104px
      height 105px
    .ui-btn-inner
      padding 10px
      .ui-btn-text
        /*text-transform uppercase*/
