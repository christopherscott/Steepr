@import 'nib'

animation-name()
  -webkit-animation-name arguments
  -moz-animation-name arguments
  -ms-animation-name arguments
  animation-name arguments

animation-timing-function()
  -webkit-animation-timing-function arguments
  -moz-animation-timing-function arguments
  -ms-animation-timing-function arguments
  animation-timing-function arguments




/* swipe default styles */
.swipe
  ol, ul
    margin 0
    padding 0

  li div,
  div div div
    margin 0 10px
    padding 20px 10px
    font-weight bold
    color #333
    text-shadow 0 1px #fff
    font-size 20px
    text-align center
    border-radius 5px
    background white

inset-background(color)
  background color url("../images/bgnoise_lg.png") repeat

#home
  .content
    padding 0
  #steep-button
    #steepit
      background linear-gradient(top, #6f8447, #506e4c)
      color #e0e0e0
      text-shadow 0 -1px #000

    inset-background(white) 
    box-shadow 0 1px 5px #999 inset
    padding 30px
    .ui-btn-corner-all
      border-radius 4em
    .ui-btn-inner
      padding 15px
      .ui-btn-text
        text-transform uppercase
        font-weight bold
        font-size 18px

#steep
  .content
    padding 0
    inset-background(white)

centered-bgimage(uri)
  background url(uri) no-repeat center center



#leaves
  margin 0 auto
  height 380px
  width 387px
  text-align center
  centered-bgimage('../images/leaves.png')

  #mug
    position relative
    z-index 80
    height 380px
    width 387px
    centered-bgimage('../images/mug-trans.png')

  #time
    top -245px
    z-index 100
    position relative
    text-shadow 0 -1px #270e0a
    width 200px
    color #e0e0e0
    font-size 88px
    font-family "FranchiseRegular"
    b
      color #8a470a

  #tea
    top -308px
    z-index 90
    position relative
    width 100%
    #fluid
      margin 0 auto
      height 20px
      width 20px
      background rgba(255,255,255,1)
      transition-property transform
      transition-timing-function linear
      border-radius 115px

  /* brewing animations */
  &.brewing
    #tea #fluid
      animation-name(greentea)
      animation-timing-function(linear)
      transform scale(10.5)
      background rgba(106,65,36,.8)
    #mug
      transform rotate(360deg)
      transition all 20s ease-out


#timer
  padding 70px 0
  background url("../images/tea-with-mug.png") no-repeat center center
  .inner
    position relative
    text-align center
    padding 40px
    border-radius 125px
    height 150px
    width 150px
    margin 0 auto
    box-shadow 0 0px 10px #000
    text-shadow 0 2px #fff
    border 1px solid #999

    p
      margin 0 0 90px
      font-size 32px
      font-family "WisdomScriptAIRegular"
      &.tea
        margin-top -10px
      .steeping
        margin-top 0

    time


